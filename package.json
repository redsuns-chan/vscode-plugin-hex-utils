{
  "name": "hex-utils",
  "displayName": "hex-utils",
  "description": "HEX utilities",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hex-utils.hexToLeFloat",
        "title": "HEX -> Float (Little Endian)"
      },
      {
        "command": "hex-utils.hexToInt",
        "title": "HEX -> Integer"
      },
      {
        "command": "hex-utils.hexToShort",
        "title": "HEX -> Short"
      },
      {
        "command": "hex-utils.hexToUTF8",
        "title": "HEX -> UTF-8 Character"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "hex-utils.hexToLeFloat"
        },
        {
          "when": "editorHasSelection",
          "command": "hex-utils.hexToInt"
        },
        {
          "when": "editorHasSelection",
          "command": "hex-utils.hexToUTF8"
        }
      ]
    },
    "configuration": {
      "title": "Hex Utilties Configuration",
      "properties": {
        "hex-utils.endian": {
          "type": "string",
          "default": "Little Endian",
          "enum": ["Little Endian", "Big Endian"]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.69.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}